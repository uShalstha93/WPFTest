<Window x:Class="WPFTest.Components.TestForm.Homepage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTest.Components.TestForm"
        mc:Ignorable="d"
        Title="Homepage" MinHeight="450" MinWidth="980" WindowState="Maximized">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--sidebar menu-->
        <Frame Grid.Column="0"
               Source="/Components/Pages/SidebarMenu.xaml" />
        
        <!--content field-->
            <Frame Grid.Column="1"
                   Source="/Components/Pages/DashboardMain.xaml" />
    </Grid>
</Window>
